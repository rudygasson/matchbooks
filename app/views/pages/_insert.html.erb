<div class="row" data-update-area-target="book-list">
  <% if filtered_books.count > 0 %>
    <% filtered_books.reverse.each do |book| %>
      <%= link_to book_path(book, district: params[:district]), class: "card-book my-1 p-1" do %>
          <img src="<%= book.thumbnail %>" alt="book card">
          <div class="card-book-infos">
            <h2><%= "#{book.title}"%></h2>
            <p><%= book.author %></p>
          </div>
      <% end %>
    <% end %>
  <% else %>
    <p class="text-center"><em>There aren't any books available for this search. Try another one!</em></p>
  <% end %>
</div>
