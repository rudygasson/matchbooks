<% if books.length > 0 %>
  <h3 class="text-center"><%= query.blank? ? "Latest books " : "Books for '#{query}' " %>in <%= area %></h3>
  <div class="cards-grid">
    <% books.reverse.each do |book| %>
      <%= render 'shared/bookcard', book: book %>
    <% end %>
  </div>
<% else %>
  <p class="text-center"><em>There aren't any books available for this search. Try another one!</em></p>
<% end %>
