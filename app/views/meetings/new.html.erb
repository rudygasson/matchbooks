<div class="container">
  <div class="profile text-center" data-controller="flatpickr">
    <%= image_tag @deliverer.avatar, class: "avatar-large avatar-bordered" %>
    <h2><%= @deliverer.username %></h2>
    <p>Sci-fi-Fan, also interested in sociology and economics literature</p>
    <hr>
    <p>Schedule a meeting at</p>
    <h2><%= @location.name %></h2>
    <%= simple_form_for @meeting do |f| %>
      <%= f.input :date, as: :date, html5: true, input_html: {class: "datepicker", placeholder: "June 11, 2022"} %>
      <%= f.input :time, as: :time, html5: true, input_html: {class: "timepicker", placeholder: "12:00"} %>
      <%= hidden_field_tag 'copy', @copy.id %>
      <%= hidden_field_tag 'deliverer', @deliverer.id %>
      <%= hidden_field_tag 'location', @location.id %>
      <%= f.submit "Request", class: "btn btn-success" %>
    <% end %>
  </div>
</div>
